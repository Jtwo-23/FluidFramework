{
	"extends": [
		"../../../../common/build/build-common/tsconfig.base.json",
		"../../../../common/build/build-common/tsconfig.esm-only.json",
	],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"module": "esnext",
		"lib": ["ESNext", "DOM"],
		"outDir": "dist",
		"jsx": "react",
		"noImplicitAny": true,
		"resolveJsonModule": true,
